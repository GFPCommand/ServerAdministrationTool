<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/Server_Administration_Tool.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <input type="checkbox" id="side-checkbox" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Server Administration Tool</a>
                @if (Context.User.Identity.IsAuthenticated)
                {
                    <a id="user" style="margin-right: 1em; cursor: pointer">@Context.User.Identity.Name</a>
                    <div id="pop">
                        <span style="display: block; padding: 0.5em">Добро пожаловать, @Context.User.Identity.Name</span>
                        <a>Профиль</a>
                        <a href="/logout">Выход</a>
                    </div>
                }
                @* @if (Context.User.Identity.IsAuthenticated) {
                    <span>Добро пожаловать, @Context.User.Identity.Name</span>
                    <a href="/logout">Выйти</a>
                }   *@              
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>